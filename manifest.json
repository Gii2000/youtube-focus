{
	"name": "YouTube Focus",
	"version": "0.2",
	"manifest_version": 3,
	"description": "An extension to stop mindlessly scrolling the YouTube home page",
	"action": {
		"default_popup": "main.html"
	},
	"content_scripts": [
		{
			"matches": [
				"*://www.youtube.com/*"
			],
			"js": [
				"youtube.js"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	]
}
